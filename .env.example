# BFIH Backend Configuration File
# Copy to .env and fill in your values

# ============================================================================
# OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o

# Vector store ID for treatise and scenarios
# Get this from: https://platform.openai.com/docs/guides/file-search
TREATISE_VECTOR_STORE_ID=vs_xxxxxxxxxxxxxx

# ============================================================================
# API Server Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=False

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ============================================================================
# Storage Configuration
# ============================================================================
STORAGE_TYPE=file  # Options: file, postgres, redis
STORAGE_BASE_DIR=./data

# PostgreSQL (if STORAGE_TYPE=postgres)
DATABASE_URL=postgresql://user:password@localhost:5432/bfih_db

# Redis (if using caching)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/bfih_backend.log

# ============================================================================
# Analysis Configuration
# ============================================================================
# Maximum analysis timeout in seconds
ANALYSIS_TIMEOUT_SECONDS=120

# Maximum number of concurrent analyses
MAX_CONCURRENT_ANALYSES=10

# Evidence search configuration
MAX_EVIDENCE_RESULTS_PER_HYPOTHESIS=5
SEARCH_DOMAIN_FILTER=all  # Options: all, academic, news, business

# ============================================================================
# Development Configuration
# ============================================================================
ENVIRONMENT=development  # Options: development, staging, production

# Test mode (uses mock data instead of real OpenAI calls)
TEST_MODE=False
